<!DOCTYPE html>
<html>
<head>
    <title>Add Schedule</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 600px;
            margin: auto;
            padding: 20px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            text-align: left;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border-radius: 50px;
            border: 1px solid #ccc;
        }

        .day-checkbox {
            display: inline-block;
            margin-right: 10px;
        }

        .styled-checkbox {
            display: none;
        }

        .day-checkbox-label {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 30px;
            border: 2px solid lightblue;
            cursor: pointer;
        }

        .styled-checkbox:checked + .day-checkbox-label {
            background-color: darkblue;
            color: white;
            border-color: darkblue;
        }

        .time-selector {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .time-select {
            flex: 1;
            display: flex;
            align-items: center;
            margin-right: 10px;
        }

        .time-select:last-child {
            margin-right: 0;
        }

        .time-select label {
            margin-right: 10px;
        }

        .time-select select {
            flex: 1;
            margin-right: 5px;
        }

        .btn {
            background-color: lightblue;
            color: white;
            border: none;
            border-radius: 50px;
            padding: 10px 20px;
            cursor: pointer;
        }

        /* Overlay and Popup Styles */
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 999;
        }

        .popup {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            text-align: center;
        }

        .close-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>Add Schedule</h1>
    <% if @schedule.errors.any? %>
        <div class="overlay" id="overlay">
            <div class="popup">
                
                <h2>Schedule Overlap Error</h2>
                <ul>
                <% @schedule.errors.each do |attribute, message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        </div>
        <script>
        document.addEventListener("DOMContentLoaded", function() {
            <% if @schedule.errors.any? %>
                document.getElementById('overlay').style.display = 'flex';
            <% end %>
        });
    
        function closePopup() {
            document.getElementById('overlay').style.display = 'none';
        }
    </script>
    
    <% end %>
    
    <%= form_with(model: @schedule,remote: true, url: schedules_path, method: :post) do |form| %>
        <div class="form-group">
            <%= form.label :name, "Title" %>
            <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
            <label>Active Days</label>
            <div>
                <% Date::ABBR_DAYNAMES.each_with_index do |day, index| %>
                    <div class="day-checkbox">
                        <%= check_box_tag 'schedule[days][]', 2**index, @schedule.days & (2**index) > 0, id: "schedule_days_#{2**index}", class: "styled-checkbox" %>
                        <%= label_tag "schedule_days_#{2**index}", day, class: "day-checkbox-label" %>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="form-group time-selector">
            <div class="time-select">
                <%= form.label :start_time, 'Start Time' %>
                <%= select_tag 'schedule[start_time_hour]', options_for_select(1..12), class: 'form-control' %>
                <%= select_tag 'schedule[start_time_minute]', options_for_select(0..59), class: 'form-control' %>
                <%= select_tag 'schedule[start_time_ampm]', options_for_select(['AM', 'PM']), class: 'form-control' %>
            </div>
            <div class="time-select">
                <%= form.label :end_time, 'End Time' %>
                <%= select_tag 'schedule[end_time_hour]', options_for_select(1..12), class: 'form-control' %>
                <%= select_tag 'schedule[end_time_minute]', options_for_select(0..59), class: 'form-control' %>
                <%= select_tag 'schedule[end_time_ampm]', options_for_select(['AM', 'PM']), class: 'form-control' %>
            </div>
        </div>
        <%= form.submit 'Save', class: 'btn' %>
       
        <%= link_to 'Cancel', schedules_path, class: 'btn' %>
    <% end %>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const checkboxes = document.querySelectorAll('.styled-checkbox');
    checkboxes.forEach(checkbox => {
      checkbox.addEventListener('change', function() {
        const label = this.nextElementSibling;
        if (this.checked) {
          label.style.backgroundColor = 'darkblue';
          label.style.color = 'white';
        } else {
          label.style.backgroundColor = '';
          label.style.color = '';
        }
      });
    });
  });

  // Show overlay and popup if there are errors after form submission
  <% if @schedule.errors.any? %>
    document.addEventListener('DOMContentLoaded', function() {
      document.getElementById('overlay').style.display = 'flex';
    });
  <% end %>
</script>





</body>
</html>
